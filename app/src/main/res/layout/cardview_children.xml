<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/new_white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_margin">

            <RelativeLayout
                style="@style/Widget.CardContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cardview_border">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/imageViewMorning"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:text="Kahvaltı"
                    android:id="@+id/textViewMorning"
                    android:textColor="@color/my_primary"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imageViewMorning"
                    android:layout_toEndOf="@+id/imageViewMorning" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fabMorning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/plus_black"
                    android:layout_gravity="bottom|right"
                    app:fabSize="normal"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_margin"
            android:layout_marginLeft="@dimen/card_margin"
            android:layout_marginRight="@dimen/card_margin"
            >

            <RelativeLayout
                style="@style/Widget.CardContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cardview_border">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/imageViewMorningSnack"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:text="Kahvaltı Snack"
                    android:id="@+id/textViewMorningSnack"
                    android:textColor="@color/my_primary"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imageViewMorningSnack"
                    android:layout_toEndOf="@+id/imageViewMorningSnack" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fabMorningSnack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/plus_black"
                    android:layout_gravity="bottom|right"
                    app:fabSize="normal"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_margin"
            android:layout_marginLeft="@dimen/card_margin"
            android:layout_marginRight="@dimen/card_margin">

            <RelativeLayout
                style="@style/Widget.CardContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cardview_border">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/imageViewLunch"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:text="Öğlen"
                    android:id="@+id/textViewLunch"
                    android:textColor="@color/my_primary"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imageViewLunch"
                    android:layout_toEndOf="@+id/imageViewLunch" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fabLunch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/plus_black"
                    android:layout_gravity="bottom|right"
                    app:fabSize="normal"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_margin"
            android:layout_marginLeft="@dimen/card_margin"
            android:layout_marginRight="@dimen/card_margin"
            >

            <RelativeLayout
                style="@style/Widget.CardContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cardview_border">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/imageViewLunchSnack"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:text="Öğlen Snack"
                    android:id="@+id/textViewLunchSnack"
                    android:textColor="@color/my_primary"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imageViewLunchSnack"
                    android:layout_toEndOf="@+id/imageViewLunchSnack" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fabLunchSnack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/plus_black"
                    android:layout_gravity="bottom|right"
                    app:fabSize="normal"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_margin"
            android:layout_marginLeft="@dimen/card_margin"
            android:layout_marginRight="@dimen/card_margin"
            >

            <RelativeLayout
                style="@style/Widget.CardContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cardview_border">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/imageViewDinner"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:text="Akşam"
                    android:id="@+id/textViewDinner"
                    android:textColor="@color/my_primary"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imageViewDinner"
                    android:layout_toEndOf="@+id/imageViewDinner" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fabDinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/plus_black"
                    android:layout_gravity="bottom|right"
                    app:fabSize="normal"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
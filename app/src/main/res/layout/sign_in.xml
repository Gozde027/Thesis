<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout">

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/sign_in_adult_button"
            android:src="@drawable/ebeveyn"
            android:background="@null"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/sign_in_children_button"
            android:background="@null"
            android:src="@drawable/children_icon"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/sign_in_adult_button"
            android:layout_toEndOf="@+id/sign_in_adult_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/sign_in_child"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:id="@+id/children_text"
            android:layout_below="@+id/sign_in_children_button"
            android:layout_alignLeft="@+id/sign_in_children_button"
            android:layout_alignStart="@+id/sign_in_children_button"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/sign_in_children_button"
            android:layout_alignEnd="@+id/sign_in_children_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/sign_in_adult"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:id="@+id/adult_text"
            android:layout_below="@+id/sign_in_adult_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/sign_in_adult_button"
            android:layout_alignEnd="@+id/sign_in_adult_button" />
    </RelativeLayout>


</RelativeLayout>